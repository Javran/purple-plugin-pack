EXTRA_DIST = .plugin Makefile.mingw .build

difftopicdir = $(GAIM_LIBDIR)/pidgin

difftopic_la_LDFLAGS = -module -avoid-version

if PLUGINS

difftopic_LTLIBRARIES = difftopic.la

difftopic_la_SOURCES = \
	difftopic.c

difftopic_la_LIBADD = \
	$(GAIM_LIBS) \
	$(GTK_LIBS)

endif

AM_CPPFLAGS = \
	-DLIBDIR=\"$(GAIM_LIBDIR)/pidgin/\" \
	-DDATADIR=\"$(GAIM_DATADIR)\" \
	-DLOCALEDIR=\"$(GAIM_DATADIR)/locale\" \
	$(GTK_CFLAGS) \
	$(DEBUG_CFLAGS) \
	$(GAIM_CFLAGS)
