EXTRA_DIST=\
	.purple-plugin \
	.incomplete \
	napster16x16.png \
	napster22x22.png \
	napster48x48.png

napsterdir = $(PURPLE_LIBDIR)

napster_la_LDFLAGS = -module -avoid-version

if HAVE_PURPLE

napster_LTLIBRARIES = napster.la

napster_la_SOURCES = \
	napster.c

napster_la_LIBADD = \
	$(GLIB_LIBS) \
	$(PURPLE_LIBS)

if HAVE_PIDGIN
napsterpix16x16dir=$(PIDGIN_PIXAMPSDIR)/pidgin/protocols/16
napsterpix16x16_DATA=napster16x16.png

napsterpix22x22dir=$(PIDGIN_PIXMAPSDIR)/pidgin/protocols/22
napsterpix22x22_DATA=napster22x22.png

napsterpix48x48dir=$(PIDGIN_PIXMAPSDIR)/pidgin/protocols/48
napsterpix48x48_DATA=napster48x48.png
endif

endif

AM_CPPFLAGS = \
	-DLIBDIR=\"$(PURPLE_LIBDIR)\" \
	-DDATADIR=\"$(PURPLE_DATADIR)\" \
	$(DEBUG_CFLAGS) \
	$(PURPLE_CFLAGS)

