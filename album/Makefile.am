EXTRA_DIST = \
	.build \
	.pidgin-plugin \
	Makefile.mingw \
	album.h \
	album-ui.h

albumdir = $(PIDGIN_LIBDIR)

album_la_LDFLAGS = -module -avoid-version

if HAVE_PIDGIN

album_LTLIBRARIES = album.la

album_la_SOURCES = \
	album.c \
	album-ui.c

album_la_LIBADD = \
	$(PIDGIN_LIBS) \
	$(GTK_LIBS)

endif

AM_CPPFLAGS = \
	-DLIBDIR=\"$(PIDGIN_LIBDIR)\" \
	-DDATADIR=\"$(PIDGIN_DATADIR)\" \
	$(GTK_CFLAGS) \
	$(DEBUG_CFLAGS) \
	$(PIDGIN_CFLAGS)
